<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/grey"
    android:layout_margin="12dp"
    tools:context=".presentation.new_notes.NewNotesFragment">


    <EditText
        android:id="@+id/et_name_notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/name_notes"
        android:paddingStart="16dp"
        android:paddingBottom="28dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:background="@drawable/edit_text_cut"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />
    <EditText
        android:id="@+id/et_text_notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/text_notes"
        android:paddingStart="16dp"
        android:paddingBottom="28dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/edit_text_cut"
        app:layout_constraintTop_toBottomOf="@id/et_name_notes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/corner_radius"
        android:text="@string/save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>